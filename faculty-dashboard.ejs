<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Faculty Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white p-8">
  <h2 class="text-2xl font-bold mb-6 text-center">Faculty Dashboard</h2>

  <!-- Search Section -->
  <div class="mb-4">
    <input type="text" id="search" class="p-2 border rounded" placeholder="Search by Name or Pseudo" />
    <button onclick="searchSubmissions()" class="bg-blue-500 text-white px-4 py-2 rounded">Search</button>
  </div>

  <!-- CSV Download -->
  <a href="/download-csv" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 mb-6 inline-block">
    Download Student Details CSV
  </a>

  <a href="/add-question" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 mb-6 inline-block">Add New Question</a>

  <div class="overflow-x-auto">
    <table class="w-full table-auto border">
      <thead class="bg-gray-200">
        <tr>
          <th class="p-2">Name</th>
          <th class="p-2">USN</th>
          <th class="p-2">Pseudonym</th>
          <th class="p-2">Branch</th>
          <th class="p-2">Section</th>
          <th class="p-2">Score</th>
        </tr>
      </thead>
      <tbody>
        <% submissions.forEach(s => { %>
          <tr class="border-t">
            <td class="p-2"><%= s.name %></td>
            <td class="p-2"><%= s.usn %></td>
            <td class="p-2"><%= s.pseudo %></td>
            <td class="p-2"><%= s.branch %></td>
            <td class="p-2"><%= s.section %></td>
            <td class="p-2"><%= s.score %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    function searchSubmissions() {
      const query = document.getElementById('search').value.toLowerCase();
      const rows = document.querySelectorAll('table tbody tr');

      rows.forEach(row => {
        const name = row.querySelector('td:nth-child(1)').textContent.toLowerCase();
        const pseudo = row.querySelector('td:nth-child(3)').textContent.toLowerCase();

        if (name.includes(query) || pseudo.includes(query)) {
          row.style.display = ''; // Show row
        } else {
          row.style.display = 'none'; // Hide row
        }
      });
    }
  </script>
</body>
</html>
